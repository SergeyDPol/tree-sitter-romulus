{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "romulus",
      "camelcase": "Romulus",
      "title": "Romulus",
      "scope": "source.romulus",
      "file-types": [
        ".roma"
      ],
      "injection-regex": "^romulus$",
      "class-name": "TreeSitterRomulus"
    }
  ],
  "metadata": {
    "version": "0.1.0",
    "license": "MIT",
    "description": "A simple language for integer computations with Latin-inspired syntax",
    "authors": [
      {
        "name": "Sergey Polukhin",
        "email": "sergeydpol@gmail.com"
      }
    ],
    "links": {
      "repository": "https://github.com/SergeyDPol/tree-sitter-romulus"
    }
  },
  "bindings": {
    "c": true,
    "go": true,
    "node": true,
    "python": true,
    "rust": true,
    "swift": true,
    "zig": false
  }
}